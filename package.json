{
  "name": "eslint-config-decent",
  "version": "2.0.1",
  "description": "A decent ESLint configuration",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "unbuild",
    "test": "tsc --noEmit --skipLibCheck",
    "lint:markdown": "prettier --cache --write '*.md' '!(node_modules|dist)/**/*.md' && markdownlint '*.md' '!(node_modules|dist)/**/*.md' --config=.github/linters/.markdown-lint.yml --fix",
    "lint:code": "eslint --fix",
    "prelint": "npm run build",
    "lint": "run-p lint:*",
    "lint-staged": "lint-staged",
    "beta": "npm publish --tag beta",
    "prepublishOnly": "npm run lint && npm run test && npm run build && pinst --disable",
    "postpublish": "pinst --enable",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.md": [
      "prettier --write --cache",
      "markdownlint --config=.github/linters/.markdown-lint.yml --fix"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.cjs": [
      "eslint --fix"
    ],
    "*.mjs": [
      "eslint --fix"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jgeurts/eslint-config-decent.git"
  },
  "keywords": [
    "eslint",
    "config",
    "decent"
  ],
  "author": "Jim Geurts <jim@biacreations.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jgeurts/eslint-config-decent/issues"
  },
  "homepage": "https://github.com/jgeurts/eslint-config-decent#readme",
  "engines": {
    "node": ">=20.11.0"
  },
  "dependencies": {
    "@eslint/js": "^9.8.0",
    "@typescript-eslint/utils": "8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import-x": "^3.1.0",
    "eslint-plugin-jsdoc": "^48.11.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-unicorn": "^55.0.0",
    "globals": "^15.9.0",
    "typescript-eslint": "8.0.0"
  },
  "devDependencies": {
    "@swc/core": "1.7.5",
    "@types/node": ">=22",
    "eslint": "^9.8.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "markdownlint-cli": "^0.41.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "unbuild": "2.0.0"
  },
  "overrides": {
    "eslint-plugin-jsx-a11y": {
      "eslint": "$eslint"
    },
    "eslint-plugin-react": {
      "eslint": "$eslint"
    },
    "eslint-plugin-react-hooks": {
      "eslint": "$eslint"
    },
    "eslint-plugin-testing-library": {
      "eslint": "$eslint"
    }
  }
}
