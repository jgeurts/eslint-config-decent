{
  "name": "eslint-config-decent",
  "version": "2.6.3",
  "description": "A decent ESLint configuration",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "unbuild",
    "test": "tsc --noEmit --skipLibCheck",
    "lint:markdown": "prettier --cache --write '*.md' '!**/(node_modules|dist)/**/*.md' && markdownlint '*.md' '!**/(node_modules|dist)/**/*.md' --config=.github/linters/.markdown-lint.yml --fix",
    "lint:code": "eslint --fix",
    "prelint": "npm run build",
    "lint": "run-p lint:*",
    "lint-staged": "lint-staged",
    "beta": "npm publish --tag beta",
    "prepublishOnly": "npm run lint && npm run test && npm run build && pinst --disable",
    "postpublish": "pinst --enable",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.md": [
      "prettier --write --cache",
      "markdownlint --config=.github/linters/.markdown-lint.yml --fix"
    ],
    "*.{json5,yml}": [
      "prettier --write"
    ],
    "*.{js,cjs,mjs,ts}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jgeurts/eslint-config-decent.git"
  },
  "keywords": [
    "eslint",
    "config",
    "decent"
  ],
  "author": "Jim Geurts <jim@biacreations.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jgeurts/eslint-config-decent/issues"
  },
  "homepage": "https://github.com/jgeurts/eslint-config-decent#readme",
  "engines": {
    "node": ">=20.11.0"
  },
  "dependencies": {
    "@eslint/compat": "1.2.7",
    "@eslint/js": "9.23.0",
    "@next/eslint-plugin-next": "^15.2.4",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@typescript-eslint/utils": "8.28.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-import-x": "4.9.4",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-jest-dom": "5.5.0",
    "eslint-plugin-jsdoc": "50.6.9",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-mocha": "10.5.0",
    "eslint-plugin-prettier": "5.2.5",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-testing-library": "7.1.1",
    "eslint-plugin-unicorn": "58.0.0",
    "globals": "16.0.0",
    "typescript-eslint": "8.28.0"
  },
  "devDependencies": {
    "@swc/core": "^1.11.13",
    "@types/node": ">=22",
    "eslint": "^9.23.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "markdownlint-cli": "^0.44.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "prettier": "3.5.3",
    "typescript": "^5.8.2",
    "unbuild": "3.5.0"
  },
  "overrides": {
    "eslint-plugin-jsx-a11y": {
      "eslint": "$eslint"
    },
    "eslint-plugin-react": {
      "eslint": "$eslint"
    },
    "eslint-plugin-react-hooks": {
      "eslint": "$eslint"
    },
    "eslint-plugin-testing-library": {
      "eslint": "$eslint"
    }
  }
}
